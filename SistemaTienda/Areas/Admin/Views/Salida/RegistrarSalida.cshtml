@model SistemaHotelero.Models.ViewModels.SalidaVM

@{
    ViewData["Title"] = "Registrar Salida";
    var totalReserva = Model.Recepcion.PrecioInicial - Model.Recepcion.Adelanto;
    var totalVentas = Model.TotalVentas;
    var totalPagar = totalReserva + totalVentas;
}

<style>
    :root {
        --primary-color: #4e5bf2;
        --secondary-color: #3a49d1;
        --danger-color: #dc3545;
        --warning-color: #ffc107;
        --success-color: #28a745;
        --info-color: #17a2b8;
        --text-color: #333333;
        --light-bg: #f8f9fa;
        --card-bg: #ffffff;
        --border-color: #e0e0e0;
        --muted-text: #6c757d;
        --total-pay-color: #007bff;
    }

    .detalle-container {
        min-height: calc(100vh - 120px);
        display: flex;
        justify-content: center;
        padding: 30px 20px;
    }

    .detalle-card {
        background-color: var(--card-bg);
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        padding: 2.5rem;
        width: 100%;
        max-width: 900px;
    }

    .section-title {
        font-weight: 600;
        color: var(--primary-color);
        margin: 1.5rem 0 1rem 0;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid var(--primary-color);
    }

    .habitation-details {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 1rem;
    }

    .form-group {
        flex: 1;
        min-width: 0;
    }

    .detail-row {
        display: flex;
        margin-bottom: 0.5rem;
    }

    .detail-label {
        font-weight: 600;
        min-width: 120px;
        color: var(--text-color);
    }

    .detail-value {
        color: #495057;
    }

    .detail-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.2rem;
    }

    .detail-item {
        margin-bottom: 0.8rem;
    }

    .currency-value {
        font-family: 'Roboto', sans-serif;
        font-weight: bold;
        color: var(--primary-color);
    }

    .btn-action {
        border: none;
        padding: 0.6rem 1.2rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
        cursor: pointer;
    }

    .btn-primary {
        background-color: var(--primary-color);
        color: white;
    }

        .btn-primary:hover {
            background-color: var(--secondary-color);
            transform: translateY(-1px);
        }

    .btn-secondary {
        background-color: var(--muted-text);
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-1px);
        }

    .buttons-container {
        display: flex;
        justify-content: flex-end;
        gap: 15px;
        margin-top: 2rem;
    }

    .empty-services {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1rem;
        text-align: center;
        color: #6c757d;
    }

    .total-pay-section {
        background-color: #eaf4ff;
        border-left: 5px solid var(--total-pay-color);
        border-radius: 10px;
        padding: 1.5rem;
        margin-top: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .total-pay-label {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--total-pay-color);
    }

    .total-pay-value {
        font-size: 1.8rem;
        font-weight: 800;
        color: var(--total-pay-color);
    }

    @@media (max-width: 768px) {
        .form-row {
            flex-direction: column;
            gap: 0;
        }

        .detail-row {
            flex-direction: column;
        }

        .detail-label {
            margin-bottom: 0.3rem;
        }

        .total-pay-section {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
        }
    }

    .pago-section {
        background-color: #f1f5ff;
        border-radius: 10px;
        padding: 1.5rem;
        margin-top: 2rem;
        border-left: 4px solid var(--primary-color);
    }

    .total-pagar {
        font-size: 1.5rem;
        font-weight: bold;
        color: var(--danger-color);
    }

    .sales-details {
        background: #f3f8fd;
        border-radius: 10px;
        padding: 1.5rem;
        margin-top: 1.5rem;
        box-shadow: 0 2px 8px #e9f0fa;
    }

    .sales-table th, .sales-table td {
        vertical-align: middle;
        text-align: center;
    }

    .sales-table th {
        background: var(--primary-color);
        color: #fff;
    }

    .sales-table {
        margin-bottom: 0;
    }

    .custom-table-wrapper {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 6px 24px rgba(30, 41, 59, 0.07);
        padding: 0;
        margin-bottom: 0;
        overflow: hidden;
    }

    .custom-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin-bottom: 0;
        background: transparent;
    }

        .custom-table thead tr th {
            background: #22282f;
            color: #fff;
            font-weight: 700;
            padding: 16px 0 16px 0;
            text-align: center;
            font-size: 1.12rem;
            border-top-left-radius: 18px;
            border-top-right-radius: 18px;
            border-bottom: none;
        }

        .custom-table tbody tr {
            background: #fff;
            border-bottom: 1px solid #f1f1f1;
            font-size: 1.05rem;
        }

        .custom-table tbody td {
            padding: 16px 0 12px 0;
            text-align: center;
            border: none;
        }

        .custom-table tbody tr:last-child td {
            border-bottom: none;
        }

    .custom-total {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        padding: 20px 16px 10px 0;
        font-size: 1.2rem;
        background: transparent;
    }

    .custom-total-amount {
        color: #2369fa;
        font-weight: 800;
        font-size: 1.3rem;
        margin-left: 0.5rem;
    }

    .table {
        background: white !important;
        border-radius: 10px !important;
        overflow: hidden;
        margin-bottom: 0;
    }

        .table thead th {
            border-top: none !important;
        }

        .table tfoot td {
            border-bottom: none !important;
            background: #f8f9fa !important;
        }

    .venta-table th, .venta-table td {
        vertical-align: middle !important;
    }

    .table-dark th {
        background-color: #23272b !important;
        color: #fff !important;
    }
</style>

<div class="detalle-container">
    <div class="detalle-card">

        <!-- Resumen de la Habitación -->
        <div class="habitation-details">
            <h5 class="section-title">Resumen de la Habitación</h5>
            <div class="form-row">
                <div class="form-group">
                    <div class="detail-row">
                        <span class="detail-label">Número:</span>
                        <span class="detail-value">@Model.Recepcion.Habitacion.Numero</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Detalles:</span>
                        <span class="detail-value">@Model.Recepcion.Habitacion.Detalle</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="detail-row">
                        <span class="detail-label">Categoría:</span>
                        <span class="detail-value">@Model.Recepcion.Habitacion.Categoria.Descripcion</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Piso:</span>
                        <span class="detail-value">@Model.Recepcion.Habitacion.Piso.Descripcion</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Precio por Noche:</span>
                        <span class="detail-value currency-value">$@Model.Recepcion.Habitacion.Precio.ToString("F2")</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Datos del Cliente -->
        <div class="habitation-details">
            <h5 class="section-title">Datos del Cliente</h5>
            <div class="form-row">
                <div class="form-group">
                    <div class="detail-row">
                        <span class="detail-label">Cliente:</span>
                        <span class="detail-value">@Model.Recepcion.ApplicationUser.Nombre @Model.Recepcion.ApplicationUser.Apellido</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Documento:</span>
                        <span class="detail-value">@Model.Recepcion.ApplicationUser.TipoDocumento: @Model.Recepcion.ApplicationUser.NumeroDocumento</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="detail-row">
                        <span class="detail-label">Correo:</span>
                        <span class="detail-value">@Model.Recepcion.ApplicationUser.Email</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Teléfono:</span>
                        <span class="detail-value">@(Model.Recepcion.ApplicationUser.PhoneNumber ?? "No registrado")</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Detalles de la Reserva -->
        <div class="habitation-details">
            <h5 class="section-title">Detalles de la Reserva</h5>
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="detail-label">Fecha Entrada:</span>
                    <div class="detail-value">@Model.Recepcion.FechaEntrada.ToShortDateString()</div>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Fecha Salida:</span>
                    <div class="detail-value">@DateTime.Now.ToShortDateString()</div>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Costo Total:</span>
                    <div class="detail-value currency-value">$@Model.Recepcion.PrecioInicial.ToString("F2")</div>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Adelanto:</span>
                    <div class="detail-value currency-value">$@Model.Recepcion.Adelanto.ToString("F2")</div>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Saldo Pendiente:</span>
                    <div class="detail-value currency-value">$@(totalReserva.ToString("F2"))</div>
                </div>
            </div>
        </div>

        <!-- Ventas a la Habitación -->
        <div class="habitation-details">
            <h5 class="section-title">Servicios a la Habitación</h5>
            @if (Model.Ventas != null && Model.Ventas.Any())
            {
                <div class="table-responsive mb-4">
                    <table class="table table-hover shadow-sm rounded venta-table">
                        <thead class="table-dark text-center align-middle">
                            <tr>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Precio Unitario</th>
                                <th>SubTotal</th>
                                <th>Fecha</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var venta in Model.Ventas)
                            {
                                foreach (var detalle in venta.DetalleVenta)
                                {
                                    <tr>
                                        <td>@detalle.Producto.Nombre</td>
                                        <td class="text-center">@detalle.Cantidad</td>
                                        <td class="text-end">$@detalle.Producto.Precio.ToString("F2")</td>
                                        <td class="text-end">$@detalle.SubTotal.ToString("F2")</td>
                                        <td class="text-center">@venta.FechaCreacion.ToShortDateString()</td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end fw-bold">Total ventas:</td>
                                <td class="text-end fw-bold text-primary" colspan="2">
                                    $@Model.TotalVentas.ToString("F2")
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-services">
                    <i class="fas fa-info-circle"></i> No se encontraron ventas registradas para la habitación.
                </div>
            }
        </div>

        <!-- Pago y Salida -->
        <div class="pago-section">
            <h5 class="section-title">Registrar Pago</h5>
            <form asp-action="RegistrarSalida" method="post">
                <input type="hidden" name="idRecepcion" value="@Model.Recepcion.IdRecepcion" />

                <div class="form-group">
                    <label class="form-label">Total a Pagar:</label>
                    <div class="total-pagar">$@totalPagar.ToString("F2")</div>
                </div>

                <div class="form-group">
                    <label class="form-label">Monto Recibido:</label>
                    <input type="number" name="montoPagado" class="form-control"
                           step="0.01" min="0" max="@totalPagar"
                           value="@totalPagar" required />
                </div>

                <div class="buttons-container" style="margin-top: 25px; display: flex; justify-content: space-between; align-items: center;">
                    <a asp-action="Index" class="btn btn-outline-secondary" style="padding: 6px 16px; font-size: 0.95rem; border-radius: 6px;">
                        <i class="fas fa-arrow-left mr-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn" style="background-color: #4e5bf2; color: white; padding: 6px 20px; font-size: 0.95rem; font-weight: 600; border-radius: 6px;">
                        <i class="fas fa-credit-card mr-1"></i> Confirmar Pago
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
