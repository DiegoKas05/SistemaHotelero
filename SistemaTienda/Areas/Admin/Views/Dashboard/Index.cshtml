@model SistemaHotelero.Models.ViewModels.DashboardViewModel

<div class="container py-4">
    <div class="text-center mb-4">
        <img src="~/img/logo-hotel.png" alt="Hotel Logo" style="width: 220px; height: auto;">
        <h2 class="mt-3">Panel de Control del Hotel</h2>
        <p class="text-muted">Resumen general del estado de las habitaciones</p>
    </div>

    <div class="row">
        <!-- Total Habitaciones -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-0 shadow-sm rounded-4" style="background-color: #f0f8ff;">
                <div class="card-body text-center">
                    <i class="bi bi-building display-5 text-primary"></i>
                    <h6 class="mt-3">Total Habitaciones</h6>
                    <h3 class="fw-bold text-primary">@Model.TotalHabitaciones</h3>
                </div>
            </div>
        </div>

        <!-- Habitaciones Disponibles -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-0 shadow-sm rounded-4" style="background-color: #e6ffe6;">
                <div class="card-body text-center">
                    <i class="bi bi-door-open-fill display-5 text-success"></i>
                    <h6 class="mt-3">Disponibles</h6>
                    <h3 class="fw-bold text-success">@Model.HabitacionesDisponibles</h3>
                </div>
            </div>
        </div>

        <!-- Habitaciones Ocupadas -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-0 shadow-sm rounded-4" style="background-color: #ffe6e6;">
                <div class="card-body text-center">
                    <i class="bi bi-person-fill-lock display-5 text-danger"></i>
                    <h6 class="mt-3">Ocupadas</h6>
                    <h3 class="fw-bold text-danger">@Model.HabitacionesOcupadas</h3>
                </div>
            </div>
        </div>

        <!-- Habitaciones en Limpieza -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-0 shadow-sm rounded-4" style="background-color: #fff9e6;">
                <div class="card-body text-center">
                    <i class="bi bi-bucket-fill display-5 text-warning"></i>
                    <h6 class="mt-3">En Limpieza</h6>
                    <h3 class="fw-bold text-warning">@Model.HabitacionesLimpieza</h3>
                </div>
            </div>
        </div>
    </div>
</div>
