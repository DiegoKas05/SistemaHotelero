@{
    ViewData["Title"] = "Lista de Habitaciones";
}

<div class="container-fluid px-4">
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="fas fa-bed me-2"></i> @ViewData["Title"]</h4>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus-circle me-1"></i> Nueva Habitación
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="tblHabitacion" class="table table-striped table-bordered nowrap" style="width:100%">
                    <thead class="table-dark">
                        <tr>
                            <th>Número</th>
                            <th>Detalle</th>
                            <th>Precio</th>
                            <th>Piso</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/habitacion.js"></script>
}
