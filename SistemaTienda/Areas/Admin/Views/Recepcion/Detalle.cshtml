@model SistemaHotelero.Models.Recepcion

@{
    ViewData["Title"] = "Detalle de Reserva";
}

<div class="container mt-4">
    <!-- Detalle de la Habitación -->
    <div class="card border-0 shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i> Detalle de la Habitación</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <label class="fw-bold">Número:</label>
                    <p>@Model.Habitacion.Numero</p>
                </div>
                <div class="col-md-3">
                    <label class="fw-bold">Detalles:</label>
                    <p>@Model.Habitacion.Detalle</p>
                </div>
                <div class="col-md-3">
                    <label class="fw-bold">Categoría:</label>
                    <p>@Model.Habitacion.Categoria.Descripcion</p>
                </div>
                <div class="col-md-3">
                    <label class="fw-bold">Piso:</label>
                    <p>@Model.Habitacion.Piso.Descripcion</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label class="fw-bold">Cliente:</label>
                    <p>@Model.ApplicationUser.Nombre @Model.ApplicationUser.Apellido</p>
                </div>
                <div class="col-md-3">
                    <label class="fw-bold">Nro. Documento:</label>
                    <p>@Model.ApplicationUser.NumeroDocumento</p>
                </div>
                <div class="col-md-3">
                    <label class="fw-bold">Correo:</label>
                    <p>@Model.ApplicationUser.Email</p>
                </div>
                <div class="col-md-3">
                    <label class="fw-bold">Fecha Entrada:</label>
                    <p>@Model.FechaEntrada.ToShortDateString()</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Detalle del Hospedaje -->
    <div class="card border-0 shadow mt-4">
        <div class="card-header bg-light">
            <h6 class="mb-0 fw-semibold text-center">Detalle del Hospedaje</h6>
        </div>
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-md-2">
                    <label class="fw-bold">Costo Habitación:</label>
                    <input class="form-control form-control-sm text-center"
                           value="$@Model.PrecioInicial.ToString("F2")" readonly />
                </div>
                <div class="col-md-2">
                    <label class="fw-bold">Cantidad Adelantado:</label>
                    <input class="form-control form-control-sm text-center"
                           value="$@Model.Adelanto.ToString("F2")" readonly />
                </div>
                <div class="col-md-2">
                    <label class="fw-bold">Cantidad Restante:</label>
                    <input class="form-control form-control-sm text-center"
                           value="$@((Model.PrecioInicial - Model.Adelanto).ToString("F2"))" readonly />
                </div>
                <div class="col-md-2">
                    <label class="fw-bold">Fecha Salida:</label>
                    <input class="form-control form-control-sm text-center"
                           value="@Model.FechaSalida?.ToShortDateString()" readonly />
                </div>
            </div>
        </div>
    </div>
</div>
