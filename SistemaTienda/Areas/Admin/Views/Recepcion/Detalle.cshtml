@model SistemaHotelero.Models.ViewModels.ReservaVM

@{
    ViewData["Title"] = "Detalle de Reserva";
}

<style>
    :root {
        --primary-color: #4e5bf2;
        --secondary-color: #3a49d1;
        --danger-color: #dc3545;
        --warning-color: #ffc107;
        --success-color: #28a745;
        --info-color: #17a2b8;
        --text-color: #333333;
        --light-bg: #f8f9fa;
        --card-bg: #ffffff;
        --border-color: #e0e0e0;
        --muted-text: #6c757d;
    }

    .detalle-container {
        min-height: calc(100vh - 120px);
        display: flex;
        justify-content: center;
        padding: 30px 20px;
    }

    .detalle-card {
        background-color: var(--card-bg);
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        padding: 2.5rem;
        width: 100%;
        max-width: 900px;
    }

    .section-title {
        font-weight: 600;
        color: var(--primary-color);
        margin: 1.5rem 0 1rem 0;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid var(--primary-color);
    }

    .habitation-details {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 1rem;
    }

    .form-group {
        flex: 1;
        min-width: 0;
    }

    .detail-row {
        display: flex;
        margin-bottom: 0.5rem;
    }

    .detail-label {
        font-weight: 600;
        min-width: 120px;
        color: var(--text-color);
    }

    .detail-value {
        color: #495057;
    }

    .detail-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.2rem;
    }

    .detail-item {
        margin-bottom: 0.8rem;
    }

    .currency-value {
        font-family: 'Roboto', sans-serif;
        font-weight: bold;
        color: var(--primary-color);
    }

    /* Estilos para botones */
    .btn-action {
        border: none;
        padding: 0.6rem 1.2rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
        cursor: pointer;
    }

    .btn-primary {
        background-color: var(--primary-color);
        color: white;
    }

        .btn-primary:hover {
            background-color: var(--secondary-color);
            transform: translateY(-1px);
        }

    .btn-secondary {
        background-color: var(--muted-text);
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-1px);
        }

    .buttons-container {
        display: flex;
        justify-content: flex-end;
        gap: 15px;
        margin-top: 2rem;
    }

    .empty-services {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1rem;
        text-align: center;
        color: #6c757d;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .form-row {
            flex-direction: column;
            gap: 0;
        }

        .detail-row {
            flex-direction: column;
        }

        .detail-label {
            margin-bottom: 0.3rem;
        }
	}

    .venta-table {
        border-radius: 12px !important;
        overflow: hidden;
        background-color: #fff;
    }

        .venta-table th, .venta-table td {
            vertical-align: middle !important;
            padding: 0.75rem 1rem;
        }

        .venta-table thead {
            background-color: #4e5bf2;
            color: #fff;
        }

        .venta-table tfoot {
            background-color: #eaf4ff;
            font-size: 1.1rem;
        }

        .venta-table tbody tr {
            transition: background 0.2s;
        }

            .venta-table tbody tr:hover {
                background: #f2f4fa;
            }

        .venta-table td, .venta-table th {
            border: none !important;
        }

    .empty-services {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1.2rem;
        text-align: center;
        color: #6c757d;
        margin-top: 1rem;
        box-shadow: 0 1px 8px rgba(0,0,0,.07);
    }
</style>

<div class="detalle-container">
    <div class="detalle-card">
        <div class="habitation-details">
            <h5 class="section-title">Resumen de la Habitación</h5>
            <div class="form-row">
                <div class="form-group">
                    <div class="detail-row">
                        <span class="detail-label">Número:</span>
                        <span class="detail-value">@Model.Habitacion.Numero</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Detalles:</span>
                        <span class="detail-value">@Model.Habitacion.Detalle</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="detail-row">
                        <span class="detail-label">Categoría:</span>
                        <span class="detail-value">@Model.Habitacion.Categoria.Descripcion</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Piso:</span>
                        <span class="detail-value">@Model.Habitacion.Piso.Descripcion</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Precio por Noche:</span>
                        <span class="detail-value" style="margin-left: 10px; color: #007bff; font-weight: bold;">
                            $@Model.Habitacion.Precio.ToString("F2")
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="habitation-details">
            <h5 class="section-title">Datos del Cliente</h5>
            <div class="form-row">
                <div class="form-group">
                    <div class="detail-row">
                        <span class="detail-label">Cliente:</span>
                        <span class="detail-value">@Model.Recepcion.ApplicationUser.Nombre @Model.Recepcion.ApplicationUser.Apellido</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Documento:</span>
                        <span class="detail-value">@Model.Recepcion.ApplicationUser.TipoDocumento: @Model.Recepcion.ApplicationUser.NumeroDocumento</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="detail-row">
                        <span class="detail-label">Correo:</span>
                        <span class="detail-value">@Model.Recepcion.ApplicationUser.Email</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Teléfono:</span>
                        <span class="detail-value">@(Model.Recepcion.ApplicationUser.PhoneNumber ?? "No registrado")</span>
                    </div>
                </div>
            </div>
        </div>

        <h5 class="section-title">Detalles de la Reserva</h5>
        <div class="detail-grid">
            <div class="detail-item">
                <label class="fw-bold">Fecha Entrada:</label>
                <div class="detail-value">@Model.Recepcion.FechaEntrada.ToShortDateString()</div>
            </div>

            <div class="detail-item">
                <span class="detail-label">Fecha Salida:</span>
                <div class="detail-value">@(Model.Recepcion.FechaSalida?.ToShortDateString() ?? "No definida")</div>
            </div>
            <div class="detail-item">
                <span class="detail-label">Costo Total:</span>
                <div class="detail-value currency-value">$@Model.Recepcion.PrecioInicial.ToString("F2")</div>
            </div>
            <div class="detail-item">
                <span class="detail-label">Adelanto:</span>
                <div class="detail-value currency-value">$@Model.Recepcion.Adelanto.ToString("F2")</div>
            </div>
            <div class="detail-item">
                <span class="detail-label">Saldo Pendiente:</span>
                <div class="detail-value currency-value">$@((Model.Recepcion.PrecioInicial - Model.Recepcion.Adelanto).ToString("F2"))</div>
            </div>
            <div class="detail-item">
                <span class="detail-label">Estado:</span>
                <div class="detail-value">
                    @if (Model.Recepcion.Estado)
                    {
                        <span class="badge badge-success">Activa</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">Finalizada</span>
                    }
                </div>
            </div>
            <div class="detail-item">
                <span class="detail-label">Observaciones:</span>
                <div class="detail-value">@(!string.IsNullOrEmpty(Model.Recepcion.Observacion) ? Model.Recepcion.Observacion : "Ninguna")</div>
            </div>
        </div>

        <h5 class="section-title">Servicios a la Habitación</h5>
        @if (Model.Ventas != null && Model.Ventas.Any())
        {
            <div class="table-responsive mb-4">
                <table class="table table-hover shadow-sm rounded venta-table">
                    <thead class="table-dark text-center align-middle">
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio Unitario</th>
                            <th>SubTotal</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var venta in Model.Ventas)
                        {
                            foreach (var detalle in venta.DetalleVenta)
                            {
                                <tr>
                                    <td>@detalle.Producto.Nombre</td>
                                    <td class="text-center">@detalle.Cantidad</td>
                                    <td class="text-end">$@detalle.Producto.Precio.ToString("F2")</td>
                                    <td class="text-end">$@detalle.SubTotal.ToString("F2")</td>
                                    <td class="text-center">@venta.FechaCreacion.ToShortDateString()</td>
                                </tr>
                            }
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end fw-bold">Total ventas:</td>
                            <td class="text-end fw-bold text-primary" colspan="2">
                                $@Model.Ventas.SelectMany(v => v.DetalleVenta).Sum(d => d.SubTotal).ToString("F2")
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        { 
        <div class="empty-services">
            <i class="fas fa-info-circle"></i> No se encontraron ventas registradas para la habitación.
        </div>
        }

        <div class="buttons-container">
            <a asp-action="Index" class="btn-action btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver al listado
            </a>
        </div>
    </div>
</div>