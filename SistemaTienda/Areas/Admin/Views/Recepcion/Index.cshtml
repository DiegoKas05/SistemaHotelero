@model IEnumerable<SistemaHotelero.Models.Habitacion>

@{
    ViewData["Title"] = "Gestión de Habitaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between mb-3">
    <h3 class="fw-bold">Gestión de Habitaciones</h3>

    <div class="form-group">
        <label class="fw-semibold">Seleccionar Piso</label>
        <select id="filtroPiso" class="form-select">
            <option value="Todos">Todos</option>
            @foreach (var piso in Model.Select(h => h.Piso.Descripcion).Distinct())
            {
                <option value="@piso">@piso</option>
            }
        </select>
    </div>
</div>

<div class="row" id="contenedorTarjetas">
    @foreach (var habitacion in Model)
    {
        var estado = habitacion.EstadoHabitacion.Descripcion.ToLower();
        var color = estado switch
        {
            "disponible" => "success",
            "ocupado" => "danger",
            "limpieza" => "info",
            _ => "secondary"
        };
        var icono = estado switch
        {
            "disponible" => "fa-door-open",
            "ocupado" => "fa-bed",
            "limpieza" => "fa-broom",
            _ => "fa-question"
        };

        <div class="col-md-3 mb-4 tarjeta-habitacion" data-piso="@habitacion.Piso.Descripcion">
            <div class="border rounded shadow-sm p-3 bg-white h-100">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <strong>HAB: @habitacion.Numero</strong><br />
                        <small class="text-muted">CAT: @habitacion.Categoria.Descripcion.ToUpper()</small><br />
                        <small class="text-muted">PISO: @habitacion.Piso.Descripcion.ToUpper()</small>
                    </div>
                    <i class="fas @icono fa-lg text-@color"></i>
                </div>
                <div class="mt-3">
                    @if (habitacion.EstadoHabitacion.Descripcion.ToLower() == "disponible")
                    {
                        <a asp-action="Registrar" asp-route-id="@habitacion.IdHabitacion" class="btn btn-success w-100 fw-bold text-white">
                            DISPONIBLE
                        </a>
                    }
                    else
                    {
                        <a asp-action="Detalle" asp-route-id="@habitacion.IdHabitacion" class="btn btn-danger w-100 text-white fw-bold">
                            OCUPADO
                        </a>

                    }
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.getElementById('filtroPiso').addEventListener('change', function () {
            const pisoSeleccionado = this.value;
            const tarjetas = document.querySelectorAll('.tarjeta-habitacion');

            tarjetas.forEach(tarjeta => {
                const piso = tarjeta.getAttribute('data-piso');
                tarjeta.style.display = (pisoSeleccionado === "Todos" || piso === pisoSeleccionado) ? "block" : "none";
            });
        });
    </script>
}
