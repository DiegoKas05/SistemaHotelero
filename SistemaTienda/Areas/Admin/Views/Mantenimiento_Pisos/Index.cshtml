@{
    ViewData["Title"] = "Lista de Pisos";
}

<div class="container-fluid px-4">
    <div class="card mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-layer-group me-2"></i> @ViewData["Title"]</h4>
            <a asp-action="Crear" class="btn btn-success">
                <i class="fas fa-plus-circle me-1"></i> Nuevo Piso
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table id="tblPisos" class="table table-striped table-bordered nowrap" style="width:100%">
                    <thead class="table-dark">
                        <tr>
                            <th>Descripción</th>
                            <th>Estado</th>
                            <th style="width:120px">Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/piso.js"></script>
}
