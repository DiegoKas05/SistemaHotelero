@model SistemaHotelero.Models.Piso

@{
    ViewData["Title"] = "Crear Piso";
}

<div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow border-0" style="width: 500px;">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0"><i class="fas fa-layer-group me-2"></i>@ViewData["Title"]</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Crear" method="post">
                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label small">Descripción</label>
                    <input asp-for="Descripcion" class="form-control form-control-sm" />
                    <span asp-validation-for="Descripcion" class="text-danger small"></span>
                </div>

                <div class="form-check mb-4">
                    <input asp-for="Estado" class="form-check-input" />
                    <label asp-for="Estado" class="form-check-label small">Activo</label>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="fas fa-save me-1"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
