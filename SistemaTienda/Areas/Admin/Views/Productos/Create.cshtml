@model SistemaHotelero.Models.Producto

@{
    ViewData["Title"] = "Registrar Producto";
}

<div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow border-0" style="width: 600px;">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0"><i class="fas fa-box me-2"></i>@ViewData["Title"]</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label small">Nombre</label>
                    <input asp-for="Nombre" class="form-control form-control-sm" required />
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Detalle" class="form-label small">Detalle</label>
                    <input asp-for="Detalle" class="form-control form-control-sm" />
                    <span asp-validation-for="Detalle" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Precio" class="form-label small">Precio</label>
                    <input asp-for="Precio" type="number" step="0.01" class="form-control form-control-sm" required />
                    <span asp-validation-for="Precio" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Cantidad" class="form-label small">Cantidad</label>
                    <input asp-for="Cantidad" type="number" class="form-control form-control-sm" required />
                    <span asp-validation-for="Cantidad" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="fas fa-save me-1"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>