@model SistemaHotelero.Models.ViewModels.HabitacionVM

@{
    ViewData["Title"] = "Crear Habitación";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <h4><i class="fas fa-plus me-2"></i>Crear Habitación</h4>
        </div>

        <div class="card-body">
            <form asp-action="Crear" method="post">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Habitacion.Numero" class="form-label"></label>
                        <input asp-for="Habitacion.Numero" class="form-control" />
                        <span asp-validation-for="Habitacion.Numero" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Habitacion.Precio" class="form-label"></label>
                        <input asp-for="Habitacion.Precio" class="form-control" />
                        <span asp-validation-for="Habitacion.Precio" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Habitacion.Detalle" class="form-label"></label>
                        <input asp-for="Habitacion.Detalle" class="form-control" />
                        <span asp-validation-for="Habitacion.Detalle" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Habitacion.IdCategoria" class="form-label"></label>
                        <select asp-for="Habitacion.IdCategoria" asp-items="Model.ListaCategoria" class="form-select">
                            <option value="">-- Seleccionar Categoría --</option>
                        </select>
                        <span asp-validation-for="Habitacion.IdCategoria" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Habitacion.IdPiso" class="form-label"></label>
                        <select asp-for="Habitacion.IdPiso" asp-items="Model.ListaPiso" class="form-select">
                            <option value="">-- Seleccionar Piso --</option>
                        </select>
                        <span asp-validation-for="Habitacion.IdPiso" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Habitacion.IdEstadoHabitacion" class="form-label"></label>
                        <select asp-for="Habitacion.IdEstadoHabitacion" asp-items="Model.ListaEstado" class="form-select">
                            <option value="">-- Seleccionar Estado --</option>
                        </select>
                        <span asp-validation-for="Habitacion.IdEstadoHabitacion" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Habitacion.Estado" />
                    <label class="form-check-label" asp-for="Habitacion.Estado"></label>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
