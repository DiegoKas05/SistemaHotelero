@model SistemaHotelero.Models.ViewModels.HabitacionVM

@{
    ViewData["Title"] = "Crear Habitación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <h4><i class="fas fa-plus me-2"></i>Crear Habitación</h4>
        </div>
        <div class="card-body">
            <form asp-action="Crear" method="post" id="formHabitacion">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Habitacion.Numero" class="form-label"></label>
                        <input asp-for="Habitacion.Numero" class="form-control" required />
                        <span asp-validation-for="Habitacion.Numero" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Habitacion.Precio" class="form-label"></label>
                        <input asp-for="Habitacion.Precio" class="form-control" required type="number" step="0.01" min="0" />
                        <span asp-validation-for="Habitacion.Precio" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Habitacion.Detalle" class="form-label"></label>
                        <input asp-for="Habitacion.Detalle" class="form-control" />
                        <span asp-validation-for="Habitacion.Detalle" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Habitacion.IdCategoria" class="form-label"></label>
                        <select asp-for="Habitacion.IdCategoria" asp-items="Model.ListaCategoria" class="form-select" required>
                            <option value="">-- Seleccionar Categoría --</option>
                        </select>
                        <span asp-validation-for="Habitacion.IdCategoria" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Habitacion.IdPiso" class="form-label"></label>
                        <select asp-for="Habitacion.IdPiso" asp-items="Model.ListaPiso" class="form-select" required>
                            <option value="">-- Seleccionar Piso --</option>
                        </select>
                        <span asp-validation-for="Habitacion.IdPiso" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Habitacion.Estado" checked />
                    <label class="form-check-label" asp-for="Habitacion.Estado"></label>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-1"></i> Volver</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i> Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('#formHabitacion').on('submit', function() {
                $('button[type="submit"]').prop('disabled', true)
                    .html('<span class="spinner-border spinner-border-sm" role="status"></span> Guardando...');
            });
        });
    </script>
}