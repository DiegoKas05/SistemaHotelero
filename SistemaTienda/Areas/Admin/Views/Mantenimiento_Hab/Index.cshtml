@{
    ViewData["Title"] = "Listado de Habitaciones";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="fas fa-bed me-2"></i>Habitaciones</h4>
                <a asp-action="Crear" class="btn btn-success">
                    <i class="fas fa-plus me-1"></i> Nueva
                </a>
            </div>
        </div>

        <div class="card-body">
            <table id="tblHabitaciones" class="table table-striped" style="width:100%">
                <thead class="table-dark">
                    <tr>
                        <th>Número</th>
                        <th>Detalle</th>
                        <th>Precio</th>
                        <th>Categoría</th>
                        <th>Piso</th>
                        <th>Estado</th>
                        <th>Activo</th>
                        <th style="width:120px">Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/habitaciones.js"></script>
}
