            </div> *@

            <div class="d-grid gap-2">
                <button id="login-submit" type="submit" class="btn btn-primary">Iniciar Sesión</button>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-secondary">Registrarme</a>
            </div>

            @* <div class="auth-footer-links mt-3">
                <p><a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a></p>
                <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmación</a></p>
            </div> *@
        </form>

